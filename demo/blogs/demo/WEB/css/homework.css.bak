html,body,div,ul,li,h3{
	margin:0px;
	padding:0px;
}
html,body{
	width:100%;	height:100%;	font-size:14px;	font-family:"软件雅黑";	color:#fff;
}
body{background:url("../images/2.gif"); }
li{list-style:none;}
img{border:none;}
a{text-decoration:none;color:#fff;strat nav}
/*strat top*/
#top{width:100%;	height:100px;	background:url("../images/2.gif");color:red;
font-size:50px;	font-weight:bold;	line-height:100%;/*行高  上下居中*/}
#top .t_ly{float:left;}
#top .logo{width:100px;height:100px;background:red;display:inline-block;float:left;margin-left:206px}
#top .t_title{width:100%;height:100px;color:#FFC1FF;line-height:100px;margin:0px auto;}
/*end top*/

/*strat nav*/
#nav{width:20%;	height:90%;	float:left;	border:1px ;margin-left:3px;}
#nav ul{width:100%;}
#nav ul li{width:100%;}
#nav ul li h3{width:100%;	height:50px;	background-size:100% 100%;	color:#FFF;	font-size:20px;
font-weight:bold;	line-height:50px;/*行高  上下居中*/	text-align:center;/*左右居中*/	cursor:pointer;
border:1px solid #ffc1ff;	border-radius:10px;}
#nav ul li h3:hover{background:#ff00ff;transition:all 0.4s ease;}
#nav ul li ul {display:none;}
#nav ul li ul li{width:80%;	height:50px;	background:url("../images/2.gif");	background-size:100% 100%;
margin:auto;	font-size:20px;	font-weight:bold;	line-height:50px;/*行高  上下居中*/	text-align:center;/*左右居中*/
border:1px solid #ffc1ff;	border-radius:46px;	}
#nav ul li ul li:hover{background:#ff00cc;transition:all 0.4s ease;}

/*end strat*/

